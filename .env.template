# Project Chimera environment template
# Copy to .env and fill values locally. Secrets must never be committed.

# Neo4j connection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=replace_me

# GitHub ingestion
GITHUB_REPOS=owner1/repo1,owner2/repo2
GITHUB_TOKEN=
GITHUB_LOOKBACK_HOURS=24
GITHUB_MAX_COMMITS=50

# Jira ingestion
JIRA_BASE=https://your-domain.atlassian.net
JIRA_USER=
JIRA_TOKEN=
JIRA_JQL=project = PROJ AND status = Done ORDER BY updated DESC

# Logging
INGEST_LOG_LEVEL=INFO
