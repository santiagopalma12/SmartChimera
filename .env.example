# Neo4j Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASS=your_password_here

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token

# Jira Integration (Optional)
JIRA_BASE=https://your-domain.atlassian.net
JIRA_USER=your_email@example.com
JIRA_TOKEN=your_jira_api_token

# Privacy Configuration
# Set to 'true' in production to hash employee IDs
HASH_ACTOR_IDS=false

# IMPORTANT: Change this in production!
# Use a strong random string (minimum 32 characters)
# Store securely (AWS Secrets Manager, Azure Key Vault, etc.)
PRIVACY_SALT=change_me_in_production_please_use_strong_random_string
